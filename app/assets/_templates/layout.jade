doctype html
html(class='no-js')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=Edge,chrome=1')
		meta(name='viewport', content='shrink-to-fit=no, initial-scale=1.0, minimum-scale=1, width=device-width, height=device-height')
		title Site_Title

		//- metatags
		meta(name='description', content='Page_description')
		meta(name='subject', content='Page_subject')
		link(rel="icon" type="image/png" href="PLACE_YOUR_URL")

		//- Share graphs for social media
		meta(property="og:url" 			content="PLACE_YOUR_URL")
		meta(property="og:type" 		content="TYPE")
		meta(property="og:title" 		content="PLACE_YOUR_TITLE")
		meta(property="og:description" 	content="PLACE_YOUR_DESCRIPTION")
		meta(property="og:image" 		content="PLACE_YOUR_IMAGE_URL")
		meta(name="twitter:card", content="summary")

		//- stylesheets
		link(rel='stylesheet', href='public/css/app.css')

	body
		//- header
		h1 Snaju Brunch Boilerplate
		h2 Built from scratch, no libraries yet.

		//- content
		#main-wrapper
			block content

		//- scripts
		script(src='public/js/app.js')